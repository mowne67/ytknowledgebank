{
  "manifest_version": 3,
  "name": "YouTube Summary Generator",
  "version": "1.0",
  "action": {
    "default_title": "Show Markdown"
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["bg.jpg", "marked.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
